{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"$id": "http://org.foundationzero.zem/schemas/usage",
	"properties": {
		"usage": {
			"type": "object",
			"properties": {
				"value": {
					"description": "The current usage",
					"type": "number"
				},
				"unit": {
					"description": "The unit in which the usage is expressed",
					"type": "string",
					"enum": [
						"kWh",
						"Joules"
					]
				}
			}
		}
	}
}