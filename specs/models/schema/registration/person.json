{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"type": "object",
	"$id": "http://org.foundationzero.zem/schemas/person",
	"$description": "Represents a person",
  "version": 0,
	"properties": {
    "id": {
      "description": "Id",
      "type": "string",
      "primary": true
    },
		"lastName": {
			"description": "Last name",
			"type": "string"
		},
		"firstName": {
			"description": "First name",
			"type": "string"
		},
		"birthDate": {
			"description": "Birth day",
			"type": "string",
      "format": "date"
		},
    "updatedAt": {
      "description": "Last update",
      "type": "string",
      "format": "date-time"
    },
    "isDeleted": {
      "description": "Whether the record is deleted",
      "type": "boolean",
      "default": false
    }
	},
	"definitions": {
		"address": {
			"$id": "#address",
			"type": "object",
			"properties": {
				"street": {
					"description": "Street name",
					"type": "string"
				},
				"Number": {
					"description": "House number",
					"type": "integer"
				},
				"Additional": {
					"description": "Additional information house number",
					"type":"string"
				},
				"City": {
					"description": "City",
					"type":"string"
				},
				"Country": {
					"description": "Country",
					"type":"string"
				}
			}
		}
	},
  "required": ["updatedAt"]
}
